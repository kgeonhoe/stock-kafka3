# PostgreSQL 연결 설정
# 로컬 Airflow용 (SSD)
AIRFLOW_POSTGRES_HOST=localhost
AIRFLOW_POSTGRES_PORT=5432
AIRFLOW_POSTGRES_DB=airflow
AIRFLOW_POSTGRES_USER=airflow
AIRFLOW_POSTGRES_PASSWORD=airflow

# 주식 데이터용 (외부 또는 HDD)
STOCK_POSTGRES_HOST=your-external-postgres-host
STOCK_POSTGRES_PORT=5432
STOCK_POSTGRES_DB=stock_db
STOCK_POSTGRES_USER=stock_user
STOCK_POSTGRES_PASSWORD=stock_password
STOCK_POSTGRES_SSL=require

